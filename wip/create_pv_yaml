# $1 is yaml file
# $2 is portal ip
# $3 is iqn
# $4 is lun
echo "apiVersion: v1" > $1
echo "kind: PersistentVolume" >> $1
echo "metadata:" >> $1
echo "  name: iscsi-pv" >> $1
echo "spec:" >> $1
echo "  capacity:" >> $1
echo "    storage: 1Gi" >> $1
echo "  accessModes:" >> $1
echo "    - ReadWriteOnce" >> $1
echo "  iscsi:" >> $1
echo "     targetPortal: $2" >> $1
echo "     iqn: $3" >> $1
echo "     lun: $4" >> $1
echo "     fsType: 'ext4'" >> $1
echo "     readOnly: false" >> $1
